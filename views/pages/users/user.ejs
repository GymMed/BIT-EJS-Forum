<div id="user-<%= user._id %>" class="flex justify-between gap-2 rounded-lg p-3 bg-gradient-to-br from-accent-700 to-accent-800 text-white hover:from-accent-500 hover:to-accent-700 hover:scale-[1.02] focus:ring focus:ring-offset-2 focus:ring-offset-white focus:ring-accent-600">
    <div class="font-bold text-md flex gap-3 justify-center items-center">
        <div class="w-40"><img src="<%= user.profilePicture %>" alt="Profile Picture" width="" height="" loading="lazy"></div>

        <div class="flex flex-col">
            <div class="text-lg"><%= user.username %></div>
        </div>
    </div>
</div>

<script>
    document.getElementById("user-<%= user._id %>").addEventListener("click", () => {
        goToEndpoint('/user/<%= user._id %>/profile');
    });
</script>