<form enctype="multipart/form-data" id="register-form" action="/api/user/register" method="post" class="p-5 m-10 rounded-lg shadow-inner flex flex-col gap-3 w-full max-w-2xl bg-gradient-to-br from-primary-700 to-primary-900">
    <div class="text-3xl font-bold text-accent-500 text-center">Register</div>
    <%- include('../../components/general/form/input-field.ejs',
    {shownLabelName: "Username", type: "text", id:"username", name: "username",
    placeholder: "Your username"}) %>

    <%-
    include('../../components/general/form/date-input.ejs', {shownLabelName:
    "Birth Date", id:"birthDate", name: "birthDate"}) %>
    <%-
    include('../../components/general/form/input-field.ejs', {shownLabelName:
    "Password", type: "password", id:"password", name: "password", placeholder:
    "Your password"}) %> <%-
    include('../../components/general/form/input-field.ejs', {shownLabelName:
    "Email", type: "email", id:"email", name: "email", placeholder:
    "Your email"}) %> <%-
    include('../../components/general/form/photo-input.ejs', {shownLabelName:
    "Picture", id:"profilePicture", name: "profilePicture"}) %>

    <%- include('../../components/general/button.ejs', {id: 'register', text: 'Register'}) %>
</form>