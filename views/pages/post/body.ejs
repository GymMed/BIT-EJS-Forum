<div class="flex flex-col gap-2 p-5 m-10">
    <%- include('../../components/general/preview/post.ejs', {post, user: userProfile}) %>

    <%- include('./comments.ejs', {}) %>

    <div class="p-5 rounded-lg shadow-inner flex flex-col gap-3 bg-gradient-to-br from-primary-700 to-primary-900">
        <form action="/api/comment/post/<%= post._id %>/" method="post" class="flex flex-col gap-3">
            <%- include('../../components/general/label.ejs', {name: 'comment', shownLabelName: 'Comment'}) %>
            <textarea name="content" id="text-editor"></textarea>
            <%- include('../../components/general/button.ejs', {type: 'submit', id: 'create-comment', text: 'Create', color: 'green'}) %>
        </form>
    </div>
</div>