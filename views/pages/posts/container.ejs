<div class="p-5 rounded-lg shadow-inner flex flex-col gap-3 bg-gradient-to-br from-primary-700 to-primary-900">
    <% if(typeof posts !== 'undefined') { %>
    <% for(const post of posts) { %>
    <%- include('./post.ejs', { post }) %>
    <% } %>
    <% } else { %>
    <div class="w-full text-xl text-accent-500 text-center font-semibold">Currently nobody created a post!</div>
    <% } %>
</div>