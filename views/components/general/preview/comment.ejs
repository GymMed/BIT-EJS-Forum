<div class="p-5 rounded-lg shadow-inner flex gap-3 bg-gradient-to-br from-primary-700 to-primary-900">
    <%- include('../profile/mini.ejs', { userProfile: (typeof preview !== 'undefined') ? user : userProfile  }) %>
    <div class="flex flex-col gap-3 w-full">
        <div class="text-md font-bold text-gray-50 text-center w-full h-full"><%- content %></div>
    </div>

    <div class="flex flex-col gap-3 items-end">
        <% if(typeof preview === 'undefined' && userProfile._id.toString() === user?._id.toString()) { %>
        <div class="flex items-start gap-2">
            <%- include('../link-outside.ejs', { url: '#', text: '', color: 'green', iconPath: './icons/edit.ejs', padding: 'px-4 py-1' }) %>
            <%- include('../link-outside.ejs', { url: '#', text: '', color: 'red', iconPath: './icons/remove.ejs', padding: 'px-4 py-1' }) %>
        </div>
        <% } %>
        <div class="flex gap-3">
            <div class="flex gap-2 text-green-500">
                <%- include('../fetch/like-button.ejs', { onclick: `handleLiking('/api/comment/like/${comment._id}', 1)`, likeCount: comment.likes, p: false }) %>
            </div>
            <div class="flex gap-2 text-red-500">
                <%- include('../fetch/dislike-button.ejs', { onclick: `handleLiking('/api/comment/dislike/${comment._id}', 1)`, dislikeCount: comment.dislikes, p: false }) %>
            </div>
        </div>
    </div>
</div>