<% if(typeof message !== 'undefined') { %>
<div class="flex items-center justify-center w-full pointer-events-none">
    <div id="success-message" class="flex items-start gap-3 text-lg rounded-lg shadow-lg border-4 border-green-950 fixed w-3/5 top-20 p-3 bg-gradient-to-br from-green-600 to-green-800 text-white font-semibold pointer-events-auto">
        <div class="w-full">
            <%= message.text %>
        </div>
        <div>
            <%- include('./button.ejs', {id: "close-success", text: "Close"}) %>
        </div>
    </div>
</div>

<script>
    const successButtonDom = document.getElementById("close-success");

    successButtonDom.addEventListener("click", () => {
        const message = document.getElementById("success-message");
        message.classList.add("hidden");
    });
</script>
<% } %>