<% if(typeof message !== 'undefined') { %>
<div class="flex items-center justify-center w-full pointer-events-none">
    <div id="error-message" class="flex items-start gap-3 text-lg rounded-lg shadow-lg border-4 border-red-950 fixed w-3/5 top-20 p-3 bg-gradient-to-br from-red-600 to-red-800 text-white font-semibold pointer-events-auto">
        <div class="w-full">
            <%= message.text %>
        </div>
        <div>
            <%- include('./button.ejs', {id: "close-error", text: "Close"}) %>
        </div>
    </div>
</div>

<script>
    const errorButtonDom = document.getElementById("close-error");

    errorButtonDom.addEventListener("click", () => {
        const message = document.getElementById("error-message");
        message.classList.add("hidden");
    });
</script>
<% } %>