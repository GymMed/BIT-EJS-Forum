<% 
    const addAsTemplate = (typeof isTemplate !== 'undefined') ? isTemplate : false;
    const finalMessage = (typeof message !== 'undefined') ? message : { text: ""};
%>
<div id="error-message" class="<% if(addAsTemplate) { %>hidden error-message-template <% } %>flex items-start gap-3 text-lg rounded-lg shadow-lg border-4 border-red-950 p-3 bg-gradient-to-br from-red-600 to-red-800 text-white font-semibold pointer-events-auto">
    <div class="message-text w-full">
        <%= finalMessage.text %>
    </div>
    <div>
        <%- include('./button.ejs', {id: "close-error", text: "Close"}) %>
    </div>
</div>