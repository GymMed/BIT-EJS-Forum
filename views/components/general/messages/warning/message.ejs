<% if(typeof message !== 'undefined') { %>
<div class="flex items-center justify-center w-full pointer-events-none">
    <div id="warning-message" class="flex items-start gap-3 text-lg rounded-lg shadow-lg border-4 border-yellow-950 fixed w-3/5 top-20 p-3 bg-gradient-to-br from-yellow-600 to-yellow-800 text-white font-semibold pointer-events-auto">
        <div class="w-full">
            <%= message.text %>
        </div>
        <div>
            <%- include('./button.ejs', {id: "close-warning", text: "Close"}) %>
        </div>
    </div>
</div>

<script>
    const warningButtonDom = document.getElementById("close-warning");

    warningButtonDom.addEventListener("click", () => {
        const message = document.getElementById("warning-message");
        message.classList.add("hidden");
    });
</script>
<% } %>