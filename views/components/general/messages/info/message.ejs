<% if(typeof message !== 'undefined') { %>
<div class="flex items-center justify-center w-full pointer-events-none">
    <div id="info-message" class="flex items-start gap-3 text-lg rounded-lg shadow-lg border-4 border-blue-950 fixed w-3/5 top-20 p-3 bg-gradient-to-br from-blue-600 to-blue-800 text-white font-semibold pointer-events-auto">
        <div class="w-full">
            <%= message.text %>
        </div>
        <div>
            <%- include('./button.ejs', {id: "close-info", text: "Close"}) %>
        </div>
    </div>
</div>

<script>
    const infoButtonDom = document.getElementById("close-info");

    infoButtonDom.addEventListener("click", () => {
        const message = document.getElementById("info-message");
        message.classList.add("hidden");
    });
</script>
<% } %>